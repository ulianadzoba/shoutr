<!DOCTYPE html>
<html>
  <head>
    <title>Shoutr</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container"> 
      <div class="navbar-section">
        <div class="search-block"><%= render "search" %></div>
        <div class="sign-status">
          <% if signed_in? %>
            <div>Signed in as: <span class="email"><%= current_user.email %></span></div>
            <div><%= link_to 'Sign out', sign_out_path, method: :delete %><i class="fas fa-sign-out-alt"></i></div>
          <% else %>
            <div><%= link_to 'Sign in', sign_in_path %><i class="fas fa-sign-in-alt"></i></div>
          <% end %>
        </div>      
      </div>

      <div id="flash">
        <% flash.each do |key, value| %>
          <div class="flash <%= key %>"><%= value %></div>
        <% end %>
      </div>

      
      <div><%= yield %></div>
    </div>
  </body>
</html>
